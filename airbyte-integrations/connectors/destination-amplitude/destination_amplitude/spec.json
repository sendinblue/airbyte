{
  "documentationUrl": "https://docs.airbyte.com/integrations/destinations/amplitude",
  "supported_destination_sync_modes": [
    "append"
  ],
  "supportsIncremental": true,
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Destination Amplitude",
    "type": "object",
    "required": [
      "api_key"
    ],
    "additionalProperties": false,
    "properties": {
      "api_key": {
        "type": "string",
        "description": "Amplitude API Key",
        "airbyte_secret": true
      },
      "flush_queue_size": {
        "type": "integer",
        "description": "Events queued in memory will flush when number of events exceed upload threshold",
        "minimum": 1,
        "maximum": 2000,
        "default": 200
      },
      "flush_interval_millis": {
        "type": "integer",
        "description": "Events queue will flush every certain milliseconds based on setting",
        "minimum": 1,
        "maximum": 20000,
        "default": 10
      },
      "flush_max_retries": {
        "type": "integer",
        "minimum": 1,
        "maximum": 15,
        "default": 12
      },
      "use_batch": {
        "type": "boolean",
        "default": true
      },
      "is_batch_identify": {
        "type": "boolean",
        "default": false
      }
    }
  }
}